    "gradient": {
      "$type": "color",
      "$description": "Gradient color stops for multi-color effects",
      "primary": {
        "start": {
          "$value": "{color.palette.vibrant.pink}",
          "$description": "Primary gradient start"
        },
        "middle-1": {
          "$value": "{color.palette.vibrant.purple}",
          "$description": "Primary gradient middle 1"
        },
        "middle-2": {
          "$value": "{color.palette.vibrant.blue}",
          "$description": "Primary gradient middle 2"
        },
        "middle-3": {
          "$value": "{color.palette.vibrant.cyan}",
          "$description": "Primary gradient middle 3"
        },
        "end": {
          "$value": "{color.palette.vibrant.green}",
          "$description": "Primary gradient end"
        }
      },
      "soft": {
        "start": {
          "$value": "{color.palette.soft.pink}",
          "$description": "Soft gradient start"
        },
        "middle": {
          "$value": "{color.palette.soft.lavender}",
          "$description": "Soft gradient middle"
        },
        "end": {
          "$value": "{color.palette.soft.sky}",
          "$description": "Soft gradient end"
        }
      },
      "brand": {
        "start": {
          "$value": "{color.palette.brand.primary}",
          "$description": "Brand gradient start"
        },
        "middle": {
