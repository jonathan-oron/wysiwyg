      "foreground": {
        "$value": "{color.palette.neutral.900}",
        "$description": "Primary text color"
      },
      "foreground-muted": {
        "$value": "{color.palette.neutral.500}",
        "$description": "Muted text color"
      },
      "primary": {
        "$value": "{color.palette.vibrant.pink}",
        "$description": "Primary brand color"
      },
      "primary-hover": {
        "$value": "{color.palette.vibrant.purple}",
        "$description": "Primary hover state"
      },
      "success": {
        "$value": "{color.palette.vibrant.green}",
        "$description": "Success state color"
      },
      "warning": {
        "$value": "{color.palette.vibrant.yellow}",
        "$description": "Warning state color"
      },
      "error": {
        "$value": "{color.palette.vibrant.pink}",
        "$description": "Error state color"
