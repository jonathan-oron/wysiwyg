    "accent-medium": {
      "$value": {
        "offsetX": "0",
        "offsetY": "0",
        "blur": "20px",
        "spread": "0",
        "color": "rgba(168, 85, 247, 0.6)"
      },
      "$description": "Medium accent glow"
    },
    "accent-multi": {
      "$value": {
        "offsetX": "0",
        "offsetY": "0",
        "blur": "24px",
        "spread": "0",
        "color": "rgba(255, 107, 157, 0.5)"
