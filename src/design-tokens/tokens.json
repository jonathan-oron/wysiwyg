        "default": {
          "$value": "{spacing.12}",
          "$description": "Default button height"
        },
        "lg": {
          "$value": "3.5rem",
          "$description": "Large button height (56px)"
        }
      },
      "padding": {
        "$type": "dimension",
        "x-sm": {
          "$value": "{spacing.4}",
          "$description": "Small button horizontal padding"
        },
        "x-default": {
          "$value": "{spacing.6}",
          "$description": "Default button horizontal padding"
        },
        "x-lg": {
          "$value": "{spacing.10}",
          "$description": "Large button horizontal padding"
        }
      },
      "radius": {
        "$type": "dimension",
        "sm": {
          "$value": "{radius.xl}",
          "$description": "Small button border radius"
        },
        "default": {
          "$value": "{radius.2xl}",
