      "$type": "fontFamily",
      "sans": {
        "$value": ["Poppins", "Quicksand", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "sans-serif"],
        "$description": "Playful rounded sans-serif font stack"
      },
      "display": {
        "$value": ["Comfortaa", "Poppins", "sans-serif"],
        "$description": "Display font for headings"
      },
      "mono": {
        "$value": ["Fira Code", "Consolas", "Monaco", "monospace"],
        "$description": "Monospace font for code"
      }
    },
    "size": {
      "$type": "dimension",
      "xs": {
        "$value": "0.75rem",
        "$description": "12px - Extra small text"
      },
      "sm": {
        "$value": "0.875rem",
        "$description": "14px - Small text"
      },
      "base": {
        "$value": "1rem",
        "$description": "16px - Base text size"
      },
      "lg": {
        "$value": "1.125rem",
        "$description": "18px - Large text"
      },
      "xl": {
        "$value": "1.25rem",
        "$description": "20px - Extra large text"
      },
      "2xl": {
        "$value": "1.5rem",
        "$description": "24px - 2X large text"
      },
      "3xl": {
        "$value": "1.875rem",
        "$description": "30px - 3X large text"
      },
      "4xl": {
        "$value": "2.25rem",
        "$description": "36px - 4X large text"
      },
      "5xl": {
        "$value": "3rem",
        "$description": "48px - 5X large text"
      },
      "6xl": {
        "$value": "3.75rem",
        "$description": "60px - 6X large text"
      }
    },
    "weight": {
      "$type": "fontWeight",
      "normal": {
        "$value": "400",
        "$description": "Normal font weight"
      },
      "medium": {
        "$value": "500",
        "$description": "Medium font weight"
      },
      "semibold": {
        "$value": "600",
        "$description": "Semibold font weight"
      },
      "bold": {
        "$value": "700",
        "$description": "Bold font weight"
      },
      "extrabold": {
        "$value": "800",
        "$description": "Extra bold font weight"
      }
    },
    "lineHeight": {
      "$type": "number",
      "tight": {
        "$value": "1.25",
        "$description": "Tight line height"
      },
      "normal": {
        "$value": "1.5",
        "$description": "Normal line height"
      },
      "relaxed": {
        "$value": "1.75",
        "$description": "Relaxed line height"
      }
    }
  },
  "spacing": {
    "$type": "dimension",
    "0": {
      "$value": "0",
      "$description": "No spacing"
