    "5": {
      "$value": "1.25rem",
      "$description": "20px spacing"
    },
    "6": {
      "$value": "1.5rem",
      "$description": "24px spacing"
    },
    "8": {
      "$value": "2rem",
      "$description": "32px spacing"
    },
    "10": {
      "$value": "2.5rem",
      "$description": "40px spacing"
    },
    "12": {
      "$value": "3rem",
      "$description": "48px spacing"
    },
    "16": {
      "$value": "4rem",
      "$description": "64px spacing"
    },
    "20": {
      "$value": "5rem",
      "$description": "80px spacing"
    },
    "24": {
      "$value": "6rem",
      "$description": "96px spacing"
    }
  },
  "radius": {
    "$type": "dimension",
    "none": {
      "$value": "0",
      "$description": "No border radius"
    },
    "sm": {
      "$value": "0.5rem",
      "$description": "8px - Small border radius"
    },
    "base": {
      "$value": "0.75rem",
      "$description": "12px - Base border radius"
    },
    "md": {
      "$value": "1rem",
      "$description": "16px - Medium border radius"
    },
    "lg": {
      "$value": "1.25rem",
      "$description": "20px - Large border radius"
    },
    "xl": {
      "$value": "1.5rem",
      "$description": "24px - Extra large border radius"
    },
    "2xl": {
      "$value": "2rem",
      "$description": "32px - 2X large border radius"
    },
    "3xl": {
      "$value": "3rem",
      "$description": "48px - 3X large border radius"
    },
    "full": {
      "$value": "9999px",
      "$description": "Fully rounded (pill shape)"
    }
  },
