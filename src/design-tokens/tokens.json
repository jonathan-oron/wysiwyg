        "300": {
          "$value": "#D4D4D4",
          "$description": "Medium-light neutral"
        },
        "400": {
          "$value": "#A3A3A3",
          "$description": "Medium neutral"
        },
        "500": {
          "$value": "#737373",
          "$description": "Medium-dark neutral"
        },
        "600": {
          "$value": "#525252",
          "$description": "Dark neutral"
        },
        "700": {
