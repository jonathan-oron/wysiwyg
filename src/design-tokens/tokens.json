    "$type": "shadow",
    "sm": {
      "$value": {
        "offsetX": "0",
        "offsetY": "2px",
        "blur": "4px",
        "spread": "0",
        "color": "rgba(255, 107, 157, 0.15)"
      },
      "$description": "Small shadow"
    },
    "base": {
      "$value": {
        "offsetX": "0",
        "offsetY": "4px",
        "blur": "8px",
        "spread": "0",
        "color": "rgba(192, 132, 252, 0.2)"
      },
      "$description": "Base shadow"
    },
    "md": {
      "$value": {
        "offsetX": "0",
        "offsetY": "6px",
        "blur": "12px",
        "spread": "0",
        "color": "rgba(168, 85, 247, 0.25)"
      },
      "$description": "Medium shadow"
    },
    "lg": {
      "$value": {
        "offsetX": "0",
        "offsetY": "10px",
        "blur": "20px",
        "spread": "0",
        "color": "rgba(255, 31, 142, 0.3)"
