{
  "$schema": "https://design-tokens.github.io/community-group/format.dtcg.json",
  "color": {
    "$type": "color",
    "terminal": {
      "black": {
        "$value": "#0a0e14",
        "$description": "Deep black background, like a CRT monitor"
      },
      "black-light": {
        "$value": "#151a21",
        "$description": "Slightly lighter black for elevated surfaces"
      },
      "green": {
        "$value": "#00ff41",
        "$description": "Classic phosphor green terminal color"
      },
      "green-dim": {
        "$value": "#00cc34",
        "$description": "Dimmed green for secondary elements"
      },
      "amber": {
        "$value": "#ffb000",
        "$description": "Amber warning color"
      },
      "cyan": {
        "$value": "#00e5ff",
        "$description": "Cyan accent color"
      },
      "red": {
        "$value": "#ff3333",
        "$description": "Red error color"
      },
      "blue": {
        "$value": "#5ccfe6",
        "$description": "Blue info color"
      },
      "purple": {
        "$value": "#c792ea",
        "$description": "Purple accent"
      },
      "gray": {
        "50": {
          "$value": "#f5f5f5",
          "$description": "Lightest gray"
        },
        "100": {
          "$value": "#e8e8e8",
          "$description": "Very light gray"
        },
        "200": {
          "$value": "#d1d1d1",
          "$description": "Light gray"
        },
        "300": {
          "$value": "#b4b4b4",
          "$description": "Medium-light gray"
        },
        "400": {
          "$value": "#8a8a8a",
          "$description": "Medium gray"
        },
        "500": {
          "$value": "#6b6b6b",
          "$description": "Medium-dark gray"
        },
        "600": {
          "$value": "#4a4a4a",
          "$description": "Dark gray"
        },
        "700": {
          "$value": "#2d2d2d",
          "$description": "Very dark gray"
        },
        "800": {
          "$value": "#1a1a1a",
          "$description": "Near black gray"
        },
        "900": {
          "$value": "#0f0f0f",
          "$description": "Darkest gray"
        }
      }
    },
    "semantic": {
      "$type": "color",
      "background": {
        "$value": "{color.terminal.black}",
        "$description": "Primary background color"
      },
      "background-elevated": {
        "$value": "{color.terminal.black-light}",
        "$description": "Elevated surface background"
      },
      "foreground": {
        "$value": "{color.terminal.green}",
        "$description": "Primary text color"
      },
      "foreground-muted": {
        "$value": "{color.terminal.gray.400}",
        "$description": "Muted text color"
      },
      "primary": {
        "$value": "{color.terminal.green}",
        "$description": "Primary brand color"
      },
      "primary-hover": {
        "$value": "{color.terminal.green-dim}",
        "$description": "Primary hover state"
      },
      "success": {
        "$value": "{color.terminal.green}",
        "$description": "Success state color"
      },
      "warning": {
        "$value": "{color.terminal.amber}",
        "$description": "Warning state color"
      },
      "error": {
        "$value": "{color.terminal.red}",
        "$description": "Error state color"
      },
      "info": {
        "$value": "{color.terminal.cyan}",
        "$description": "Info state color"
      },
      "border": {
        "$value": "{color.terminal.gray.700}",
        "$description": "Default border color"
      },
      "border-focus": {
        "$value": "{color.terminal.green}",
        "$description": "Focused border color"
      },
      "input-background": {
        "$value": "{color.terminal.black-light}",
        "$description": "Input background color"
      }
    }
  },
  "font": {
    "family": {
      "$type": "fontFamily",
      "sans": {
        "$value": ["Inter", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "sans-serif"],
        "$description": "Sans-serif font stack for UI"
      },
      "mono": {
        "$value": ["JetBrains Mono", "Fira Code", "Consolas", "Monaco", "monospace"],
        "$description": "Monospace font stack for code and terminal elements"
      }
    },
    "size": {
      "$type": "dimension",
      "xs": {
        "$value": "0.75rem",
        "$description": "12px - Extra small text"
      },
      "sm": {
        "$value": "0.875rem",
        "$description": "14px - Small text"
      },
      "base": {
        "$value": "1rem",
        "$description": "16px - Base text size"
      },
      "lg": {
        "$value": "1.125rem",
        "$description": "18px - Large text"
      },
      "xl": {
        "$value": "1.25rem",
        "$description": "20px - Extra large text"
      },
      "2xl": {
        "$value": "1.5rem",
        "$description": "24px - 2X large text"
      },
      "3xl": {
        "$value": "1.875rem",
        "$description": "30px - 3X large text"
      },
      "4xl": {
        "$value": "2.25rem",
        "$description": "36px - 4X large text"
      },
      "5xl": {
        "$value": "3rem",
        "$description": "48px - 5X large text"
      }
    },
    "weight": {
      "$type": "fontWeight",
      "normal": {
        "$value": "400",
        "$description": "Normal font weight"
      },
      "medium": {
        "$value": "500",
        "$description": "Medium font weight"
      },
      "semibold": {
        "$value": "600",
        "$description": "Semibold font weight"
      },
      "bold": {
        "$value": "700",
        "$description": "Bold font weight"
      }
    },
    "lineHeight": {
      "$type": "number",
      "tight": {
        "$value": "1.25",
        "$description": "Tight line height"
      },
      "normal": {
        "$value": "1.5",
        "$description": "Normal line height"
      },
      "relaxed": {
        "$value": "1.75",
        "$description": "Relaxed line height"
      }
    }
  },
  "spacing": {
    "$type": "dimension",
    "0": {
      "$value": "0",
      "$description": "No spacing"
    },
    "1": {
      "$value": "0.25rem",
      "$description": "4px spacing"
    },
    "2": {
      "$value": "0.5rem",
      "$description": "8px spacing"
    },
    "3": {
      "$value": "0.75rem",
      "$description": "12px spacing"
    },
    "4": {
      "$value": "1rem",
      "$description": "16px spacing"
    },
    "5": {
      "$value": "1.25rem",
      "$description": "20px spacing"
    },
    "6": {
      "$value": "1.5rem",
      "$description": "24px spacing"
    },
    "8": {
      "$value": "2rem",
      "$description": "32px spacing"
    },
    "10": {
      "$value": "2.5rem",
      "$description": "40px spacing"
    },
    "12": {
      "$value": "3rem",
      "$description": "48px spacing"
    },
    "16": {
      "$value": "4rem",
      "$description": "64px spacing"
    },
    "20": {
      "$value": "5rem",
      "$description": "80px spacing"
    },
    "24": {
      "$value": "6rem",
      "$description": "96px spacing"
    }
  },
  "radius": {
    "$type": "dimension",
    "none": {
      "$value": "0",
      "$description": "No border radius"
    },
    "sm": {
      "$value": "0.125rem",
      "$description": "2px - Small border radius"
    },
    "base": {
      "$value": "0.25rem",
      "$description": "4px - Base border radius"
    },
    "md": {
      "$value": "0.375rem",
      "$description": "6px - Medium border radius"
    },
    "lg": {
      "$value": "0.5rem",
      "$description": "8px - Large border radius"
    },
    "xl": {
      "$value": "0.75rem",
      "$description": "12px - Extra large border radius"
    },
    "full": {
      "$value": "9999px",
      "$description": "Fully rounded"
    }
  },
  "shadow": {
    "$type": "shadow",
    "sm": {
      "$value": {
        "offsetX": "0",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.5)"
      },
      "$description": "Small shadow"
    },
    "base": {
      "$value": {
        "offsetX": "0",
        "offsetY": "2px",
        "blur": "4px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.6)"
      },
      "$description": "Base shadow"
    },
    "md": {
      "$value": {
        "offsetX": "0",
        "offsetY": "4px",
        "blur": "6px",
        "spread": "-1px",
        "color": "rgba(0, 0, 0, 0.7)"
      },
      "$description": "Medium shadow"
    },
    "lg": {
      "$value": {
        "offsetX": "0",
        "offsetY": "10px",
        "blur": "15px",
        "spread": "-3px",
        "color": "rgba(0, 0, 0, 0.8)"
      },
      "$description": "Large shadow"
    },
    "glow-green": {
      "$value": {
        "offsetX": "0",
        "offsetY": "0",
        "blur": "10px",
        "spread": "0",
        "color": "rgba(0, 255, 65, 0.3)"
      },
      "$description": "Green terminal glow effect"
    },
    "glow-cyan": {
      "$value": {
        "offsetX": "0",
        "offsetY": "0",
        "blur": "10px",
        "spread": "0",
        "color": "rgba(0, 229, 255, 0.3)"
      },
      "$description": "Cyan glow effect"
    }
  },
  "transition": {
    "duration": {
      "$type": "duration",
      "fast": {
        "$value": "150ms",
        "$description": "Fast transition duration"
      },
      "base": {
        "$value": "200ms",
        "$description": "Base transition duration"
      },
      "slow": {
        "$value": "300ms",
        "$description": "Slow transition duration"
      }
    },
    "timing": {
      "$type": "cubicBezier",
      "ease": {
        "$value": [0.4, 0, 0.2, 1],
        "$description": "Standard easing function"
      }
    }
  },
  "border": {
    "width": {
      "$type": "dimension",
      "0": {
        "$value": "0",
        "$description": "No border"
      },
      "1": {
        "$value": "1px",
        "$description": "1px border"
      },
      "2": {
        "$value": "2px",
        "$description": "2px border"
      },
      "4": {
        "$value": "4px",
        "$description": "4px border"
      }
    }
  }
}
