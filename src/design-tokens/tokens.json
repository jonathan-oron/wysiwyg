        "$type": "dimension",
        "default": {
          "$value": "{spacing.6}",
          "$description": "Dialog content padding"
        }
      },
      "radius": {
        "$type": "dimension",
        "default": {
          "$value": "{radius.lg}",
          "$description": "Dialog border radius"
        }
      },
      "gap": {
        "$type": "dimension",
