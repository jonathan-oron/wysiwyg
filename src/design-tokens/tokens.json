      "border": {
        "$value": "{color.palette.soft.lavender}",
        "$description": "Default border color"
      },
      "border-focus": {
        "$value": "{color.palette.vibrant.purple}",
        "$description": "Focused border color"
      },
      "input-background": {
        "$value": "{color.palette.surface.elevated}",
        "$description": "Input background color"
      },
      "secondary": {
        "$value": "{color.palette.soft.lavender}",
        "$description": "Secondary background color"
      },
      "secondary-foreground": {
        "$value": "{color.palette.vibrant.purple}",
        "$description": "Secondary foreground color"
      },
      "muted": {
        "$value": "{color.palette.soft.pink}",
        "$description": "Muted background color"
